.about
	text-align: center
	padding: 0 10px
	box-sizing: border-box
	background-color: grayDarker
	color: mainWhite
	
	.about-header
		.about-title
			border-bottom: 1px solid mainGray
			font-size: 1.1em
			padding: 30px 50px
			lost-center: 960px
			margin-bottom: 50px
			
	.about-content
		lost-center: 960px
		
		.about-text
			lost-column: 1/3 0 30px
			text-align: left
			box-sizing: border-box

			h2
				margin: 0 0 30px 0
				font-size: 1.2em
			
			p
				margin: 0 0 20px 0
				font-size: 0.9em
				
		.about-reviews
			lost-column: 2/3 2 30px
			text-align: left
			box-sizing: border-box

			header
				h2
					margin: 0 0 30px 0
					font-size: 1.2em
					
			article
				font-size: 0.9em
				border-bottom: 1px solid mainWhite
				margin-bottom: 30px 
				padding-bottom: @margin-bottom
				lost-column: 1
								 
				span
					font-size: 50px
					margin-right: 20px 
					display: block
					float: left
					color: 	mainGray

				blockquote
					display: inline
					margin: 0
					color: mainGray

				h3
					margin: 0 0 0 3.5em
					font-size: 0.8em
					lost-column: 1

@media screen and (max-width: 710px)
	.about .about-content		
		.about-text
			lost-column: 1
			margin-bottom: 30px
			padding-left: 10px
				
		.about-reviews
			lost-column: 1
			padding-left: 10px
			
			article h3
				margin-top: 20px

			